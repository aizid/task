<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/testColor</item>
        <item name="colorPrimaryDark">@color/textColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="textInputStyle">@style/TextInputLayout.Primary</item>

        <!-- Snack Bar -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
    </style>

    <style name="NoStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.Project">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--  TEXT STYLE  -->

    <style name="TextStyle">
        <item name="android:textColor">@color/textMain</item>
    </style>


    <style name="TextStyle.Heading.Montserrat.16pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_headline_m_16pt</item>
        <item name="android:textColor">@color/textHeadingOne</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Bold</item>
    </style>
    <style name="TextStyle.Heading.Montserrat.15pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_headline_m_15pt</item>
        <item name="android:textColor">@color/textHeadingOne</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Bold</item>
    </style>
    <style name="TextStyle.Heading.Ubuntu.15pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_headline_u_15pt</item>
        <item name="android:textColor">@color/textHeadingTwo</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Medium</item>
    </style>
    <style name="TextStyle.Heading.Ubuntu.14pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_headline_u_14pt</item>
        <item name="android:textColor">@color/textHeadingTwo</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Medium</item>
    </style>
    <style name="TextStyle.Caption.Ubuntu.15pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_caption_u_15pt</item>
        <item name="android:textColor">@color/textCaptionOne</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Medium</item>
    </style>
    <style name="TextStyle.Caption.Ubuntu.14pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_caption_u_14pt</item>
        <item name="android:textColor">@color/textCaptionTwo</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Regular</item>
    </style>
    <style name="TextStyle.Caption.Ubuntu.13pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_caption_u_13pt</item>
        <item name="android:textColor">@color/textCaptionThree</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Regular</item>
    </style>
    <style name="TextStyle.Caption.Ubuntu.12pt" parent="TextStyle">
        <item name="android:textSize">@dimen/text_caption_u_12pt</item>
        <item name="android:textColor">@color/textCaptionFour</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Medium</item>
    </style>
    <style name="TextStyle.Body.Tag.Tryout" parent="TextStyle">
        <item name="android:textColor">@color/lighterTeal</item>
        <item name="android:background">@drawable/bg_button_tag_tryout_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Medium</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="TextStyle.Body.Tag.Tryout.White" parent="TextStyle">
        <item name="android:textColor">@color/buttonPrimary</item>
        <item name="android:background">@drawable/bg_try_out_type_header</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/large_padding</item>
        <item name="android:paddingEnd">@dimen/large_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Medium</item>
        <item name="android:textSize">@dimen/text_extra_small</item>
    </style>

    <style name="TextStyle.Button.Arrow" parent="Button">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Bold</item>
        <item name="android:textColor">@color/buttonPrimary</item>
        <item name="android:height">36dp</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--  TEXT STYLE RESULT  -->

    <style name="TextStyle.Result.Caption" parent="TextStyle">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Regular</item>
    </style>

    <style name="TextStyle.Result.Title.Result" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Regular</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.Result.Body" parent="TextStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Regular</item>
    </style>

    <style name="TextStyle.Result.Body.Result" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Regular</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--  TEXT  -->
    <style name="TextAppearance.Text.Ubuntu.Light" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ubuntu_l</item>
    </style>

    <style name="TextAppearance.Text.Ubuntu.Medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ubuntu_m</item>
    </style>

    <style name="TextAppearance.Text.Ubuntu.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ubuntu_b</item>
    </style>

    <style name="TextAppearance.Text.Ubuntu.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ubuntu_r</item>
    </style>

    <style name="TextAppearance.Text.Montserrat.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_r</item>
    </style>

    <style name="TextAppearance.Text.Montserrat.Medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_m</item>
    </style>

    <style name="TextAppearance.Text.Montserrat.Semibold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_s</item>
    </style>

    <style name="TextAppearance.Text.Montserrat.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_b</item>
    </style>

    <!--  WIDGET  -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textColorHint">@color/greyish</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textColorHint">@color/greyish</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/_6sdp</item>
        <item name="android:paddingRight">@dimen/_6sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <!--  WIDGET TAB CUSTOM  -->

    <style name="TabTextDialogActivation" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Semibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!--  WIDGET INPUT EDIT TEXT CUSTOM  -->

    <style name="TextInputLayout.Primary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!--  WIDGET EDIT TEXT CUSTOM  -->

    <style name="EditText.Primary" parent="EditText">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Regular</item>
    </style>

    <!--  WIDGET TOOlBAR CUSTOM  -->

    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textMain</item>
        <item name="android:textSize">@dimen/text_headline_m_14pt</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Bold</item>
    </style>

    <!--  WIDGET TEXT VIEW CUSTOM  -->

    <style name="TextView.Primary" parent="EditText">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Regular</item>
    </style>

    <!--  WIDGET BUTTON CUSTOM  -->

    <style name="Button.Primary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Semibold</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="Button.PrimarySmall" parent="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:height">@dimen/button_height_small</item>
    </style>
    <style name="Button.Warning" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/buttonPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Semibold</item>
        <item name="android:background">@drawable/bg_button_warning</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="Button.Delete" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_delete</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Semibold</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="Button.NegativeDefault" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Semibold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_primary_negative</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="Button.NegativeTransparent" parent="Button">
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_button_primary_negative_transparent</item>
    </style>
    <style name="Button.GoldSmall" parent="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_gold</item>
        <item name="android:height">@dimen/button_height_small</item>
    </style>
    <style name="Button.GreenSmall" parent="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:height">@dimen/button_height_small</item>
    </style>
    <style name="Button.ButtonBlueMid" parent="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_blue_mid</item>
        <item name="android:height">@dimen/button_height_small</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.ButtonBlueTransparent" parent="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_blue_transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
    </style>
    <style name="Button.Blue" parent="Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:height">@dimen/button_height_small</item>
    </style>

    <!--  WIDGET CHIP  -->

    <style name="Chip.Primary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="chipBackgroundColor">@color/bg_chip_selector</item>
        <item name="android:textColor">@color/bg_chip_text</item>
    </style>

    <!--  WIDGET RATING BAR  -->

    <style name="RatingBar.Primary" parent="android:TextAppearance">
        <item name="colorControlNormal">@color/greyish</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <!--  BOTTOM SHEET DIALOG  -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!--  Full Screen DIALOG WHITE  -->
    <style name="FullScreenWhiteDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorPrimary</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <!--  Full Screen DIALOG  -->
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <!--  PROGRESS DIALOG  -->
    <style name="dialogTransparentTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <!--  NAVIGATION BOTTOM  -->
    <style name="customNavBottom" parent="Widget.Design.BottomNavigationView">
        <item name="android:textAppearance">@style/TextAppearance.Text.Montserrat.Semibold</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">fonts/Montserrat-Semibold.ttf</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!--  RATTING BAR  -->
    <style name="StarRating" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">14dp</item>
        <item name="android:minWidth">14dp</item>
        <item name="android:maxHeight">14dp</item>
        <item name="android:maxWidth">14dp</item>
        <item name="android:progressDrawable">@drawable/rating_bar_bg</item>
    </style>

    <!--  DATE PICKER  -->
    <style name="DatePickerStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/blue_transparent</item>
        <item name="colorPrimaryDark">@color/blue_transparent</item>
        <item name="colorAccent">@color/blue_transparent</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!--  SEARCH VIEW  -->
    <style name="SearchViewStyle" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">@color/textHintBlue</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Ubuntu.Regular</item>
    </style>

    <!--  SNACK BAR  -->
    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/textYellow</item>
    </style>
</resources>